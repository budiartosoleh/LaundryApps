<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/bg_abstrak"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:padding="15dp"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:background="@drawable/radius"
        >



        <ImageView
            android:src="@drawable/logo2"
            android:layout_marginTop="50dp"
            android:layout_width="80dp"
            android:layout_height="80dp"
            tools:background="@drawable/radius2"

            />
        <TextView
            android:layout_marginTop="20dp"
            android:textStyle="bold"
            android:textSize="15dp"
            android:gravity="center_horizontal"
            android:textColor="#FF000000"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Silahkan Login"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Username"
            />

        <EditText
            android:drawableRight="@drawable/logo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:text="Password"
            />

        <EditText
            android:drawableRight="@drawable/show_pass"
            android:inputType="textPassword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <Button
            android:text="Login"
            android:textColor="#FF000000"
            android:background="#2196F3"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="#787878"
            android:text="Forget Password? Click Here"
            />
    </LinearLayout>

</LinearLayout>